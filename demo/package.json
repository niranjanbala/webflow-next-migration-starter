{
  "name": "numeralhq-pwa",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=\\.test\\.(js|jsx|ts|tsx)$ --testPathIgnorePatterns=/e2e/",
    "test:integration": "jest --testPathPattern=\\.integration\\.(js|jsx|ts|tsx)$",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:performance": "playwright test e2e/performance.spec.ts",
    "test:a11y": "jest --testPathPattern=accessibility",
    "test:ci": "jest --coverage --watchAll=false && playwright test",
    "test:runner": "tsx scripts/test-runner.ts",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "scrape": "tsx scripts/scrape-site.ts",
    "optimize-assets": "tsx scripts/optimize-assets.ts",
    "transform": "tsx scripts/transform-content.ts",
    "extract-design": "tsx scripts/extract-design.ts",
    "scrape-comprehensive": "tsx scripts/comprehensive-scrape.ts",
    "transform-comprehensive": "tsx scripts/transform-comprehensive.ts",
    "generate-icons": "tsx scripts/generate-pwa-icons.ts",
    "analyze": "tsx scripts/analyze-bundle.ts analyze",
    "analyze:check": "tsx scripts/analyze-bundle.ts check",
    "analyze:browser": "ANALYZE=true npm run build"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "cheerio": "^1.1.2",
    "clsx": "^2.1.1",
    "css-tree": "^3.1.0",
    "jsdom": "^26.1.0",
    "next": "15.4.5",
    "next-pwa": "^5.6.0",
    "puppeteer": "^24.15.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@axe-core/react": "^4.10.2",
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.49.1",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/css-tree": "^2.3.10",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/serviceworker": "^0.0.147",
    "eslint": "^9",
    "eslint-config-next": "15.4.5",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.0.5",
    "jest-axe": "^9.0.0",
    "jest-environment-jsdom": "^30.0.5",
    "jest-html-reporters": "^3.1.7",
    "jest-junit": "^16.0.0",
    "jest-watch-typeahead": "^2.2.2",
    "playwright": "^1.49.1",
    "prettier": "^3.6.2",
    "tailwindcss": "^4",
    "tsx": "^4.20.3",
    "typescript": "^5"
  }
}
